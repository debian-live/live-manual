msgid "3~ Qemu"
msgstr "3~ Qemu"

#. type: Plain text
#: en/user_basics.ssi:341
msgid "_* Install /{qemu}/, /{bridge-utils}/, /{sudo}/."
msgstr "_* Instalar /{qemu}/, /{bridge-utils}/, /{sudo}/."

#. type: Plain text
#: en/user_basics.ssi:343
msgid "Edit #{/etc/qemu-ifup}#:"
